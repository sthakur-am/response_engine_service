{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "func",
      "label": "func: host start",
      "command": "host start",
      "problemMatcher": "$func-python-watch",
      "isBackground": true,
      "dependsOn": "python install nltk corpora"
    },
    {
      "type": "shell",
      "label": "python install nltk corpora",
      "osx": {
        "command": "${config:azureFunctions.pythonVenv}/bin/python -m nltk.downloader punkt wordnet"
      },
      "windows": {
        "command": "${config:azureFunctions.pythonVenv}\\Scripts\\python -m nltk.downloader punkt wordnet"
      },
      "linux": {
        "command": "${config:azureFunctions.pythonVenv}/bin/python -m nltk.downloader punkt wordnet"
      },
      "dependsOn": "pip install (functions)"
    },
    {
      "label": "pip install (functions)",
      "type": "shell",
      "osx": {
        "command": "${config:azureFunctions.pythonVenv}/bin/python -m pip install --no-cache-dir -r requirements.txt"
      },
      "windows": {
        "command": "${config:azureFunctions.pythonVenv}\\Scripts\\python -m pip install --no-cache-dir -r requirements.txt"
      },
      "linux": {
        "command": "${config:azureFunctions.pythonVenv}/bin/python -m pip install --no-cache-dir -r requirements.txt"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      }
    }
  ]
}